{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentshepherd.dev/schemas/config.json",
  "title": "Agent Shepherd Configuration",
  "description": "Configuration schema for Agent Shepherd orchestration system",
  "type": "object",
  "required": [
    "version"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version",
      "pattern": "^\\d+\\.\\d+(?:\\.\\d+)?$"
    },
    "worker": {
      "type": "object",
      "description": "Worker engine configuration",
      "properties": {
        "poll_interval_ms": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 600000,
          "default": 30000,
          "description": "Polling interval for ready issues in milliseconds"
        },
        "max_concurrent_runs": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 3,
          "description": "Maximum number of concurrent agent runs"
        }
      },
      "additionalProperties": false
    },
    "monitor": {
      "type": "object",
      "description": "Monitor engine configuration",
      "properties": {
        "poll_interval_ms": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 300000,
          "default": 10000,
          "description": "Polling interval for monitoring active runs"
        },
        "stall_threshold_ms": {
          "type": "integer",
          "minimum": 30000,
          "maximum": 600000,
          "default": 60000,
          "description": "Time threshold to detect stalled runs"
        },
        "timeout_multiplier": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 5.0,
          "default": 1.0,
          "description": "Multiplier for base timeout values"
        }
      },
      "additionalProperties": false
    },
    "ui": {
      "type": "object",
      "description": "UI server configuration",
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1024,
          "maximum": 65535,
          "default": 3000,
          "description": "Port for UI server"
        },
        "host": {
          "type": "string",
          "format": "hostname",
          "default": "localhost",
          "description": "Host for UI server"
        }
      },
      "additionalProperties": false
    },
    "fallback": {
      "type": "object",
      "description": "Fallback agent system configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Master switch for fallback system. If false, no fallback anywhere."
        },
        "default_agent": {
          "type": "string",
          "description": "Default fallback agent ID for all capabilities"
        },
        "mappings": {
          "type": "object",
          "description": "Optional capability-specific fallback agent mappings",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "workflow": {
      "type": "object",
      "description": "Workflow trigger configuration",
      "properties": {
        "invalid_label_strategy": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "ignore"
          ],
          "default": "error",
          "description": "How to handle invalid workflow labels: error (fail), warning (log and continue), ignore (silently skip)"
        }
      },
      "additionalProperties": false
    },
    "hitl": {
      "type": "object",
      "description": "Human-in-the-loop configuration",
      "properties": {
        "allowed_reasons": {
          "type": "object",
          "description": "Allowed HITL reasons configuration",
          "properties": {
            "predefined": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[a-z][a-z0-9_-]*$"
              },
              "description": "List of predefined HITL reasons",
              "default": [
                "approval",
                "manual-intervention",
                "timeout",
                "error",
                "review-request"
              ]
            },
            "allow_custom": {
              "type": "boolean",
              "default": true,
              "description": "Whether custom HITL reasons are allowed"
            },
            "custom_validation": {
              "type": "string",
              "enum": [
                "none",
                "alphanumeric",
                "alphanumeric-dash-underscore"
              ],
              "default": "alphanumeric-dash-underscore",
              "description": "Validation pattern for custom reasons: none (allow anything), alphanumeric (letters and numbers only), alphanumeric-dash-underscore (letters, numbers, dashes, and underscores)"
            }
          },
          "required": [
            "predefined"
          ]
        }
      },
      "required": [
        "allowed_reasons"
      ],
      "additionalProperties": false
    },
    "loop_prevention": {
      "type": "object",
      "description": "Loop prevention configuration for dynamic workflows",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Master switch for loop prevention system. If false, all loop prevention checks are disabled."
        },
        "max_visits_default": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 10,
          "description": "Default maximum number of times a phase can be visited before being blocked. Can be overridden per-phase using max_visits field."
        },
        "max_transitions_default": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50,
          "default": 5,
          "description": "Default maximum number of times a specific phase\u2192phase transition can occur before being blocked. For example, limits how many times develop\u2192test can happen."
        },
        "cycle_detection_enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable oscillating pattern detection. Catches patterns like develop\u2192test\u2192develop\u2192test that visit/transition limits might miss."
        },
        "cycle_detection_length": {
          "type": "integer",
          "minimum": 2,
          "maximum": 10,
          "default": 3,
          "description": "Sensitivity for cycle detection. Length of transition sequence to analyze for oscillating patterns. Higher values detect longer cycles but may miss short oscillations."
        },
        "trigger_hitl": {
          "type": "boolean",
          "default": true,
          "description": "Whether to trigger Human-in-the-loop (HITL) escalation when loop prevention limits are exceeded. When true, sets ashep-hitl label and blocks further execution until human review."
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "cleanup": {
      "type": "object",
      "description": "Cleanup operational configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Master switch for cleanup operations. If false, no cleanup is performed."
        },
        "run_on_startup": {
          "type": "boolean",
          "default": false,
          "description": "Whether to run cleanup on application startup."
        },
        "archive_on_startup": {
          "type": "boolean",
          "default": false,
          "description": "Whether to archive runs on startup (requires run_on_startup)."
        },
        "delete_on_startup": {
          "type": "boolean",
          "default": false,
          "description": "Whether to delete runs on startup (requires run_on_startup)."
        },
        "schedule_interval_hours": {
          "type": "integer",
          "minimum": 1,
          "maximum": 168,
          "default": 24,
          "description": "Scheduled cleanup interval in hours. Default is 24 hours."
        }
      },
      "additionalProperties": false,
      "required": [
        "enabled"
      ]
    },
    "retention": {
      "type": "object",
      "description": "Data retention policy configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Master switch for retention policy system. If false, no retention policies are applied."
        },
        "policies": {
          "type": "array",
          "description": "Retention policies for different types of runs",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Unique name for this policy"
              },
              "description": {
                "type": "string",
                "description": "Human-readable description of the policy"
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Whether this policy is active"
              },
              "age_days": {
                "type": "integer",
                "minimum": 1,
                "default": 30,
                "description": "Age threshold in days for considering runs for cleanup"
              },
              "max_runs": {
                "type": "integer",
                "minimum": 0,
                "description": "Maximum number of runs to keep. If 0, no limit."
              },
              "max_size_mb": {
                "type": "number",
                "minimum": 0,
                "description": "Maximum total size in MB. If 0, no limit."
              },
              "archive_enabled": {
                "type": "boolean",
                "default": true,
                "description": "Whether to archive runs before deletion"
              },
              "archive_after_days": {
                "type": "integer",
                "minimum": 1,
                "description": "Archive runs after this many days. If not specified, uses age_days."
              },
              "delete_after_days": {
                "type": "integer",
                "minimum": 1,
                "description": "Delete runs after this many days. If 0, only archive."
              },
              "status_filter": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Only process runs with these statuses. If empty, all statuses."
              },
              "phase_filter": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Only process runs in these phases. If empty, all phases."
              },
              "keep_successful_runs": {
                "type": "boolean",
                "default": false,
                "description": "Whether to keep successful runs and only archive/delete failed ones"
              },
              "keep_failed_runs": {
                "type": "boolean",
                "default": true,
                "description": "Whether to keep failed runs (overrides keep_successful_runs when true)"
              }
            },
            "required": [
              "name"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "policies"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "version": "1.0",
      "worker": {
        "poll_interval_ms": 30000,
        "max_concurrent_runs": 3
      },
      "monitor": {
        "poll_interval_ms": 10000,
        "stall_threshold_ms": 60000,
        "timeout_multiplier": 1.0
      },
      "ui": {
        "port": 3000,
        "host": "localhost"
      },
      "fallback": {
        "enabled": true,
        "default_agent": "build",
        "mappings": {
          "review": "summary",
          "architecture": "plan"
        }
      },
      "workflow": {
        "invalid_label_strategy": "error"
      },
      "hitl": {
        "allowed_reasons": {
          "predefined": [
            "approval",
            "manual-intervention",
            "timeout",
            "error",
            "review-request"
          ],
          "allow_custom": true,
          "custom_validation": "alphanumeric-dash-underscore"
        }
      },
      "loop_prevention": {
        "enabled": true,
        "max_visits_default": 10,
        "max_transitions_default": 5,
        "cycle_detection_enabled": true,
        "cycle_detection_length": 3,
        "trigger_hitl": true
      },
      "retention": {
        "enabled": true,
        "policies": [
          {
            "name": "default",
            "description": "Default retention policy for all runs",
            "enabled": true,
            "age_days": 90,
            "max_runs": 1000,
            "max_size_mb": 100,
            "archive_enabled": true,
            "archive_after_days": 30,
            "delete_after_days": 90,
            "keep_successful_runs": false,
            "keep_failed_runs": true
          }
        ]
      },
      "cleanup": {
        "enabled": true,
        "run_on_startup": false,
        "archive_on_startup": false,
        "delete_on_startup": false,
        "schedule_interval_hours": 24
      }
    }
  ]
}